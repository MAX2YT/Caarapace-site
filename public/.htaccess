# Enable rewrite engine
RewriteEngine On

# Set proper MIME types for JavaScript
AddType application/javascript .js
AddType text/javascript .js
AddType application/x-javascript .js

# Set proper MIME types for CSS
AddType text/css .css

# Set proper MIME types for fonts
AddType font/woff2 .woff2
AddType font/woff .woff
AddType application/font-woff .woff
AddType application/font-woff2 .woff2

# Set proper MIME types for images
AddType image/webp .webp
AddType image/svg+xml .svg

# Enable CORS for fonts and static assets
<FilesMatch "\.(ttf|otf|eot|woff|woff2|css|js)$">
    Header set Access-Control-Allow-Origin "*"
</FilesMatch>

# Handle trailing slash routing for Next.js static export
RewriteRule ^([^.]+)/$ $1/index.html [L]

# Enable gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>
